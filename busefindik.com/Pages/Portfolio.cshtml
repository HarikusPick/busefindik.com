@page
@model busefindik.com.Pages.PortfolioModel
@{
    ViewData["NoCopyright"] = true;
    ViewData["SoscialBar"] = true;

}

<!-- Project Area Start -->
<div class="gallery_area clearfix">
    <div class="container-fluid clearfix">
        <div class="gallery_menu">
            <div class="portfolio-menu">
                <button class="active btn" type="button" data-filter="*">All</button>
                @foreach (var item in Model.categories)
                {
                    <button class="btn" type="button" data-filter=".@item">@item</button>
                }
            </div>
        </div>
        <div class="row portfolio-column">
            @foreach (var item in Model.listimages)
            {
                <!-- Single Item -->
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 column_single_gallery_item @item.Category life">
                    <img src="images/@item.ImageFileName" alt="">
                    <div class="hover_overlay">
                        <a class="gallery_img" href="images/@item.ImageFileName"><i class="fa fa-eye"></i></a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Project Area End -->

<footer class="footer-area">
    <div class="container-fluid h-100">
        <div class="row h-100">
            <div class="col-12 h-100">
                <div class="footer-content h-100 d-md-flex align-items-center justify-content-between">
                    <!-- Single Footer Content -->
                    <div class="single-footer-content">
                        <img src="img/core-img/map.png" alt="">
                        <a href="#">Blvd Libertad, 34 m05200 Arévalo</a>
                    </div>
                    <!-- Single Footer Content -->
                    <div class="single-footer-content">
                        <img src="img/core-img/smartphone.png" alt="">
