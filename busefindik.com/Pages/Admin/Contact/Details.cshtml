@page
@model busefindik.com.Pages.Admin.Contact.DetailsModel
@{
    ViewData["ContactPage"] = true;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-10 col-md-5">
 
<h2 class="my-3"> Mesaj Detayları</h2>


    <label>ID</label>
    <div class="col-sm-7">
        <input type="text" readonly class="form-control-plaintext" value="@Model.messageInfo.Id" />
    </div>



    <label>Kullanıcı Adı</label>
    <div class="col-sm-7">
        <input type="text" readonly class="form-control-plaintext" value="@Model.messageInfo.FullName" />
    </div>




    <label class="col-sm-3 col-form-label">Email</label>
    <div class="col-sm-7">
        <input type="text" readonly class="form-control-plaintext" value="@Model.messageInfo.Email" />
    </div>


<div class="row mb-2">
    <label class="col-sm-3 col-form-label">Telefon</label>
    <div class="col-sm-7">
        <input type="text" readonly class="form-control-plaintext" value="@Model.messageInfo.Phone" />
    </div>
</div>

<div class="row mb-2">
    <label class="col-sm-3 col-form-label">Konu</label>
    <div class="col-sm-7">
        <input type="text" readonly class="form-control-plaintext" value="@Model.messageInfo.Subject" />
    </div>
</div>

<div class="row mb-2">
    <label class="col-sm-3 col-form-label">Mesajı</label>
    <div class="col-sm-7">
        <textarea type="text" readonly class="form-control">>@Model.messageInfo.Email</textarea>
    </div>
</div>

<div class="row mb-2">
    <label class="col-sm-3 col-form-label">Oluşturulma Tarihi</label>
    <div class="col-sm-7">
        <input type="text" readonly class="form-control-plaintext" value="@Model.messageInfo.CreatedAt" />
    </div>
</div>

<div class="offset-sm-3 col-sm-7">
    <a class="btn btn-primary" href="/Admin/Messages/Index" role="button">Kapat</a>
</div>


</div>
    </div>
</div>

